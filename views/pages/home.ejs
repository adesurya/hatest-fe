<!-- Hero Slider Section -->
<section class="hero-slider">
    <div class="swiper hero-swiper">
        <div class="swiper-wrapper">
            <% if (sliders && sliders.length > 0) { %>
                <% sliders.forEach(slider => { %>
                    <div class="swiper-slide">
                        <div class="hero-slide" style="background-image: url('<%= slider.imageUrl %>');">
                            <div class="container h-100">
                                <div class="row h-100 align-items-center">
                                    <div class="col-lg-8 text-white" data-aos="fade-right">
                                        <h1 class="display-4 fw-bold mb-3"><%= slider.title %></h1>
                                        <p class="lead mb-4"><%= slider.subtitle %></p>
                                        <% if (slider.buttonText && slider.buttonUrl) { %>
                                            <a href="<%= slider.buttonUrl %>" class="btn btn-primary btn-lg px-5 py-3"><%= slider.buttonText %></a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <!-- Default slide if no data -->
                <div class="swiper-slide">
                    <div class="hero-slide" style="background-image: url('/images/hero-default.jpg');">
                        <div class="container h-100">
                            <div class="row h-100 align-items-center">
                                <div class="col-lg-8 text-white" data-aos="fade-right">
                                    <h1 class="display-4 fw-bold mb-3">Selamat Datang di Ikatan Dokter Indonesia</h1>
                                    <p class="lead mb-4">Organisasi profesional yang berdedikasi untuk kemajuan dan pelayanan kepada masyarakat Indonesia</p>
                                    <a href="/about" class="btn btn-primary btn-lg px-5 py-3">Tentang Kami</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="hero-slide" style="background-image: url('/images/hero-2.jpg');">
                        <div class="container h-100">
                            <div class="row h-100 align-items-center">
