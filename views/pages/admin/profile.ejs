            await profileManager.loadProfile();
        });
        
        /**
         * Profile Manager class - Main controller for the profile page
         */
        class ProfileManager {
            constructor() {
                this.ui = new ProfileUI();
                this.isLoading = false;
            }
            
            /**
             * Load user profile
             */
            async loadProfile() {
                try {
                    this.isLoading = true;
                    
                    // Fetch user profile
                    const response = await ProfileService.getUserProfile();
                    
                    if (response.success) {
                        // Populate UI with user data
                        this.ui.populateUserData(response.user);
                    } else {
                        this.ui.showErrorToast(response.message || 'Failed to load profile data');
                    }
                } catch (error) {
                    console.error('Error loading profile:', error);
                    this.ui.showErrorToast('Failed to load profile data. Please try again later.');
                } finally {
                    this.isLoading = false;
                }
            }
        }
