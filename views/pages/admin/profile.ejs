            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
        }
        
        .toast {
            width: 350px;
        }
        
        .section-divider {
            display: flex;
            align-items: center;
            color: #6c757d;
            margin: 1.5rem 0;
        }
        
        .section-divider span {
            padding: 0 1rem;
        }
        
